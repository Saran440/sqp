<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='partner_id']" position="before">
                    <field name="boi_type" attrs="{'readonly': [('state','not in',('draft'))]}" on_change="onchange_boi_type(boi_type, context)"/>
                </xpath>
                <xpath expr="//form/sheet/group/group/field[@name='date_order']" position="before">
                    <field name="boi_number_id" attrs="{'invisible': ['|',('boi_type','=','NONBOI'),('boi_type','=',False)], 'required': [('boi_type','=','BOI')], 'readonly': [('state','not in',('draft'))]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_form_ext" model="ir.ui.view">
            <field name="name">view.order.form.ext</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="product_tag.view_order_form_ext"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_tag_id']" position="attributes">
                    <attribute name="attrs">{'invisible': [('boi_type','=','BOI')], 'required': ['|',('boi_type','=','NONBOI'),('boi_type','=',False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='product_tag_id']" position="attributes">
                    <attribute name="domain">[('active' , '=', True),('name','!=','BOI')]</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
