<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_picking_out_form" model="ir.ui.view">
            <field name="name">stock.picking.out.form</field>
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='partner_id']" position="before">
                    <field name="boi_type" on_change="onchange_boi_type(boi_type, context)" attrs="{'invisible': [('is_supply_list','=',True)], 'readonly': [('state','not in',('draft'))]}"/>
                </xpath>
                <xpath expr="//form/sheet/group/group/field[@name='date']" position="before">
                    <field name="boi_number_id" attrs="{'invisible': ['|',('boi_type','=','NONBOI'),('boi_type','=',False)], 'required': [('boi_type','=','BOI')], 'readonly': [('state','not in',('draft'))]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_picking_out_form_ext" model="ir.ui.view">
            <field name="name">stock.picking.out.form.ext</field>
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='draft_force_assign']" position="after">
                    <button name="create_extra_move" string="Create Extra Move for BOI" type="object" class="oe_highlight" groups="base.group_user" attrs="{'invisible': ['|',('is_bom_move','!=',True),'|',('state','!=','draft'),('boi_type','=','NONBOI')]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_picking_in_form" model="ir.ui.view">
            <field name="name">stock.picking.in.form</field>
            <field name="model">stock.picking.in</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='partner_id']" position="before">
                    <field name="boi_type" on_change="onchange_boi_type(boi_type, context)" attrs="{'invisible': [('type','!=','in')], 'readonly': [('state','not in',('draft'))]}"/>
                </xpath>
                <xpath expr="//form/sheet/group/group/field[@name='date']" position="before">
                    <field name="boi_number_id" attrs="{'invisible': ['|',('boi_type','=','NONBOI'),('boi_type','=',False)], 'required': [('boi_type','=','BOI')], 'readonly': [('state','not in',('draft'))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
